<!DOCTYPE html>
<html lang="en">
<head>
  <%-include("head.ejs") %>
</head>
<body>
  <%-include("menu.ejs") %>
  <main>
    <section class="team-banner-container">
      <% teams.forEach(team => { %>
        <a href="/team&TeamID?<%= team.TeamID %>">
          <div class="team-banner" 
             style="
               --default-hover-color: var(--<%= team.TeamName.replace(/\s+/g, '-') %>-main);
             ">
            <div class="team-name"><%= team.TeamName %></div>
            <img src="/img/Team/<%= team.TeamName.replace(/\s+/g, '-') %>-team-img.jpg" alt="<%= team.TeamName %>_team_img" class="team-img">
          </div>
        </a>
      <% }); %>
    </section>
  </main>
</body>
</html>